somavetor(int*a, int*b, int n, int*r){
  int i;
  for(i=0;i<n;i++){
    *(r+i)=*(a+i)+*(b+i);
  }
}

int main(void) {
  int *x, *y, *r, n=4,i;
  x = (int*) malloc(n*sizeof(int));
  y = (int*) malloc(n*sizeof(int));
  r = (int*) malloc(n*sizeof(int));
  x[0]=3; x[1]=8; x[2]=0; x[3]=-8;
  y[0]=12; y[1]=-9; y[2]=1; y[3]=-3;
  somavetor(x,y,n,r);
  for(i=0;i<n;i++){
    printf("%d ", r[i]);
  }
  return 0;
}
